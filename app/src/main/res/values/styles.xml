<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circle Image View style -->
    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Spinner theme -->
    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <style name="TransactionProgressDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
</resources> 