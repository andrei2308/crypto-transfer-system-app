<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#E3F2FD"
                android:endColor="#BBDEFB"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#4A90E2" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#F7F9FC"
                android:endColor="#EDF2F7"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke android:width="2dp" android:color="#4A90E2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#FFFFFF"
                android:endColor="#F7F9FC"
                android:type="linear" />
            <corners android:radius="16dp" />
            <stroke android:width="1dp" android:color="#DDE4EA" />
        </shape>
    </item>
</selector>