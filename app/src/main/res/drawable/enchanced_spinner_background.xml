<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/enhanced_spinner_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/dividerColor" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:gravity="end|center_vertical" android:right="12dp">
        <layer-list>
            <item android:width="16dp" android:height="16dp">
                <rotate android:fromDegrees="45" android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <size android:width="8dp" android:height="8dp" />
                        <solid android:color="@color/textSecondary" />
                    </shape>
                </rotate>
            </item>
            <item android:width="16dp" android:height="16dp">
                <rotate android:fromDegrees="315" android:toDegrees="315">
                    <shape android:shape="rectangle">
                        <size android:width="8dp" android:height="8dp" />
                        <solid android:color="@color/colorWhite" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
</layer-list>