<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.exchange.ExchangeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="16dp">

            <!-- Exchange Header -->
            <TextView
                android:id="@+id/exchangeTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/exchange_funds"
                android:textSize="28sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/exchangeSubtitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert between different cryptocurrencies"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/exchangeTitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Balance Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/balanceCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorSurface"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/exchangeSubtitleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/walletBalanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_wallet_balance"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/walletBalanceLabel" />

                    <ImageView
                        android:id="@+id/eurIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_flag_eur"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider" />

                    <TextView
                        android:id="@+id/eurBalanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/eur"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/eurIcon"
                        app:layout_constraintTop_toTopOf="@id/eurIcon"
                        app:layout_constraintBottom_toBottomOf="@id/eurIcon" />

                    <TextView
                        android:id="@+id/eurBalanceValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_0_00_eur"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/eurBalanceLabel"
                        app:layout_constraintTop_toTopOf="@id/eurIcon"
                        app:layout_constraintBottom_toBottomOf="@id/eurIcon" />

                    <ImageView
                        android:id="@+id/usdIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_flag_usd"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/eurIcon" />

                    <TextView
                        android:id="@+id/usdBalanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/usd"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toEndOf="@id/usdIcon"
                        app:layout_constraintTop_toTopOf="@id/usdIcon"
                        app:layout_constraintBottom_toBottomOf="@id/usdIcon" />

                    <TextView
                        android:id="@+id/usdBalanceValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/_0_00_usd"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/usdBalanceLabel"
                        app:layout_constraintTop_toTopOf="@id/usdIcon"
                        app:layout_constraintBottom_toBottomOf="@id/usdIcon" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/refreshBalanceButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/refresh"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconGravity="textStart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/usdIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- From Currency Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/fromCurrencyCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorSurface"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/balanceCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/fromCurrencyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/from_currency"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Spinner
                        android:id="@+id/fromCurrencySpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/spinner_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/fromCurrencyLabel" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fromAmountInputLayout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:startIconDrawable="@drawable/ic_money"
                        app:startIconTint="@color/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/fromCurrencySpinner"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fromAmountEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/amount_to_exchange"
                            android:textColor="@color/textPrimary"
                            android:textSize="16sp"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Exchange Arrow -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/arrowCard"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/fromCurrencyCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/exchangeArrowImage"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_compare_arrows"
                    app:tint="@color/colorWhite" />
            </com.google.android.material.card.MaterialCardView>

            <!-- To Currency Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/toCurrencyCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorSurface"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/arrowCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/toCurrencyLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/to_currency"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Spinner
                        android:id="@+id/toCurrencySpinner"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/spinner_background"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toCurrencyLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Exchange Rate Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rateInfoCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorSurface"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/toCurrencyCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/rateInfoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exchange Details"
                        android:textSize="16sp"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/rateDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/dividerColor"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/rateInfoTitle" />

                    <TextView
                        android:id="@+id/exchangeRateLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/estimated_exchange_rate"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/rateDivider" />

                    <TextView
                        android:id="@+id/exchangeRateValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/erate"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/exchangeRateLabel"
                        app:layout_constraintTop_toTopOf="@id/exchangeRateLabel"
                        app:layout_constraintBottom_toBottomOf="@id/exchangeRateLabel" />

                    <TextView
                        android:id="@+id/estimatedAmountLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/estimated_amount"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/exchangeRateLabel" />

                    <TextView
                        android:id="@+id/estimatedAmountValue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/erate"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:gravity="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/estimatedAmountLabel"
                        app:layout_constraintTop_toTopOf="@id/estimatedAmountLabel"
                        app:layout_constraintBottom_toBottomOf="@id/estimatedAmountLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/calculateButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/calculate"
                android:textSize="16sp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="6dp"
                app:icon="@drawable/ic_calculate"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/rateInfoCardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/exchangeButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/exchangeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/exchange"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                app:icon="@drawable/ic_compare_arrows"
                app:iconGravity="textStart"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toTopOf="@id/calculateButton"
                app:layout_constraintStart_toEndOf="@id/calculateButton"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <!-- Add this right after your exchangeButton in fragment_exchange.xml -->
            <FrameLayout
                android:id="@+id/buttonProgressContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                android:background="@drawable/button_loading_background"
                app:layout_constraintBottom_toBottomOf="@+id/exchangeButton"
                app:layout_constraintEnd_toEndOf="@+id/exchangeButton"
                app:layout_constraintStart_toStartOf="@+id/exchangeButton"
                app:layout_constraintTop_toTopOf="@+id/exchangeButton">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:id="@+id/buttonProgressBar"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:indeterminateTint="@color/textOnPrimary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/loadingTextView"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/loadingTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/processing"
                        android:textColor="@color/textOnPrimary"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/buttonProgressBar"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_gravity="center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>