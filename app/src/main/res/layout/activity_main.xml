<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direct Smart Contract Interaction"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/connectButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect to Ethereum"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                android:layout_marginTop="24dp"/>

            <Button
                android:id="@+id/callViewMethodButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Token Addresses"
                app:layout_constraintTop_toBottomOf="@id/connectButton"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/balancesSectionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BALANCE CHECKS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/callViewMethodButton"/>

            <Button
                android:id="@+id/checkAllBalancesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHECK ALL BALANCES"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/balancesSectionLabel"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/contractBalancesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contract Balances:"
                android:textStyle="italic"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/checkAllBalancesButton"/>

            <LinearLayout
                android:id="@+id/contractBalanceButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/contractBalancesLabel"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/checkEurcBalanceButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contract EURC"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/checkUsdtBalanceButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contract USDT"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/walletBalancesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Wallet Balances:"
                android:textStyle="italic"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/contractBalanceButtonsLayout"/>

            <LinearLayout
                android:id="@+id/walletBalanceButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/walletBalancesLabel"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/checkWalletEurcButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wallet EURC"
                    android:layout_marginEnd="4dp"/>

                <Button
                    android:id="@+id/checkWalletUsdtButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wallet USDT"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/transactionsSectionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRANSACTIONS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/walletBalanceButtonsLayout"/>

            <Button
                android:id="@+id/mintTokenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mint EURC Tokens"
                app:layout_constraintTop_toBottomOf="@id/transactionsSectionLabel"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/approveTokenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Approve Token Spending"
                app:layout_constraintTop_toBottomOf="@id/mintTokenButton"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/callTransactionMethodButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Liquidity"
                app:layout_constraintTop_toBottomOf="@id/approveTokenButton"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/exchangeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exchange EUR to USD"
                app:layout_constraintTop_toBottomOf="@id/callTransactionMethodButton"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Results will appear here"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:background="#f0f0f0"
                android:minHeight="150dp"
                app:layout_constraintTop_toBottomOf="@id/exchangeButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>