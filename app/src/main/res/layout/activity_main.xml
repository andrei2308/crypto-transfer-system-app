<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direct Smart Contract Interaction"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to Ethereum"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/callViewMethodButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call View Method (getValue)"
        app:layout_constraintTop_toBottomOf="@id/connectButton"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/callTransactionMethodButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Transaction Method (setValue)"
        app:layout_constraintTop_toBottomOf="@id/callViewMethodButton"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Results will appear here"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="#f0f0f0"
        android:minHeight="150dp"
        app:layout_constraintTop_toBottomOf="@id/callTransactionMethodButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>