<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Direct Smart Contract Interaction"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/connectButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect to Ethereum"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/balancesSectionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BALANCE CHECKS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/connectButton"/>

            <Button
                android:id="@+id/checkAllBalancesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHECK ALL BALANCES"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/balancesSectionLabel"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/transactionsSectionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRANSACTIONS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/checkAllBalancesButton"/>

            <TextView
                android:id="@+id/currencySelectionLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Currency:"
                android:textStyle="italic"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/transactionsSectionLabel"/>

            <Spinner
                android:id="@+id/currencySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/currencySelectionLabel"/>

            <Button
                android:id="@+id/mintTokenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mint Tokens"
                app:layout_constraintTop_toBottomOf="@id/currencySpinner"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/callTransactionMethodButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Liquidity"
                app:layout_constraintTop_toBottomOf="@id/mintTokenButton"
                android:layout_marginTop="16dp"/>

            <Button
                android:id="@+id/exchangeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exchange EUR to USD"
                app:layout_constraintTop_toBottomOf="@id/callTransactionMethodButton"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Results will appear here"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:background="#f0f0f0"
                android:minHeight="150dp"
                app:layout_constraintTop_toBottomOf="@id/exchangeButton"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>