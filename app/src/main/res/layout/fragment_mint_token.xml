<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.mintFunds.MintFragment">

    <!-- Title Section -->
    <TextView
        android:id="@+id/mintTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mint Tokens"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Wallet Balance Section -->
    <androidx.cardview.widget.CardView
        android:id="@+id/walletBalanceCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mintTitleTextView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/walletBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Wallet Balance"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ethBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETH:"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/walletBalanceLabel" />

            <TextView
                android:id="@+id/ethBalanceValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.0000 ETH"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/ethBalanceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ethBalanceLabel" />

            <TextView
                android:id="@+id/eurBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EUR:"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ethBalanceLabel" />

            <TextView
                android:id="@+id/eurBalanceValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 EUR"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/eurBalanceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/eurBalanceLabel" />

            <TextView
                android:id="@+id/usdBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USD:"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eurBalanceLabel" />

            <TextView
                android:id="@+id/usdBalanceValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.00 USD"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/usdBalanceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/usdBalanceLabel" />

            <Button
                android:id="@+id/refreshBalanceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:textSize="12sp"
                android:minHeight="36dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/usdBalanceLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Currency Selection -->
    <TextView
        android:id="@+id/mintCurrencyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency:"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletBalanceCard" />

    <Spinner
        android:id="@+id/mintCurrencySpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/mintCurrencyLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mintCurrencyLabel"
        app:layout_constraintBottom_toBottomOf="@+id/mintCurrencyLabel" />

    <!-- Amount Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mintAmountInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mintCurrencyLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mintAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount to mint"
            android:inputType="numberDecimal" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Optional: Wallet Selection -->
    <TextView
        android:id="@+id/walletSectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Wallet"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mintAmountInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/walletAddressInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/walletSectionLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/walletAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Wallet Address (leave empty for your wallet)"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Mint Button -->
    <Button
        android:id="@+id/mintButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mint Token"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletAddressInputLayout" />

    <!-- Status Section -->
    <TextView
        android:id="@+id/mintStatusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mintButton" />

    <TextView
        android:id="@+id/mintStatusTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#F5F5F5"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:text="Transaction result will appear here"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mintStatusLabel" />

    <!-- Progress Indicator -->
    <ProgressBar
        android:id="@+id/mintProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>