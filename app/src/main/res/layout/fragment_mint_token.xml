<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorOffWhite"
    tools:context=".ui.mintFunds.MintFragment">

    <TextView
        android:id="@+id/mintTitleTextView"
        style="@style/Widget.App.TextView.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/mint_tokens"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/walletBalanceCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mintTitleTextView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/walletBalanceLabel"
                style="@style/Widget.App.TextView.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_wallet_balance"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ethBalanceLabel"
                style="@style/Widget.App.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eth"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/walletBalanceLabel" />

            <TextView
                android:id="@+id/ethBalanceValue"
                style="@style/Widget.App.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_0_0000_eth"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/ethBalanceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/ethBalanceLabel" />

            <TextView
                android:id="@+id/eurBalanceLabel"
                style="@style/Widget.App.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eur"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ethBalanceLabel" />

            <TextView
                android:id="@+id/eurBalanceValue"
                style="@style/Widget.App.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_0_00_eur"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/eurBalanceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/eurBalanceLabel" />

            <TextView
                android:id="@+id/usdBalanceLabel"
                style="@style/Widget.App.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usd"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/eurBalanceLabel" />

            <TextView
                android:id="@+id/usdBalanceValue"
                style="@style/Widget.App.TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/_0_00_usd"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/usdBalanceLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/usdBalanceLabel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/refreshBalanceButton"
                style="@style/Widget.App.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refresh"
                android:textSize="12sp"
                android:minHeight="36dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/usdBalanceLabel" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mintCurrencyLabel"
        style="@style/Widget.App.TextView.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/currency"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletBalanceCard" />

    <Spinner
        android:id="@+id/mintCurrencySpinner"
        style="@style/Widget.App.Spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/mintCurrencyLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mintCurrencyLabel"
        app:layout_constraintBottom_toBottomOf="@+id/mintCurrencyLabel" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/mintAmountInputLayout"
        style="@style/Widget.App.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mintCurrencyLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/mintAmountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/amount_to_mint"
            android:inputType="numberDecimal"
            android:textColor="@color/textPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/walletSectionLabel"
        style="@style/Widget.App.TextView.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target_wallet"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mintAmountInputLayout" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/walletAddressInputLayout"
        style="@style/Widget.App.TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/walletSectionLabel">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/walletAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/wallet_address_leave_empty_for_your_wallet"
            android:inputType="text"
            android:textColor="@color/textPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mintButton"
        style="@style/Widget.App.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/mint_token"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletAddressInputLayout" />

    <TextView
        android:id="@+id/mintStatusLabel"
        style="@style/Widget.App.TextView.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mintButton" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mintStatusLabel">

        <TextView
            android:id="@+id/mintStatusTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:text="@string/transaction_result_will_appear_here"
            android:fontFamily="monospace"
            android:textColor="@color/textPrimary" />
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/mintProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:indeterminateTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>